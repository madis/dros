<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="<%= @project.icon_color %>">
        <i class="material-icons"><%= @project.icon_text %></i>
      </div>
      <div class="card-content">
        <div class="card-title">
          <a href="<%= @project.url %>">
          <h2><%= @project.slug %></h2>
          </a>
        </div>
        <div class="table-responsive">
          <table class="table">
            <thead class="text-primary">
              <tr><th>Metric</th>
                <th>For project</th>
                <th>Average for others</th>
                <th>Comparison</th>
              </tr></thead>
              <tbody>
                <% @project.metrics.each do |metric| %>
                  <tr>
                    <td><%= metric %></td>
                    <td><%= @project.random_value %></td>
                    <td><%= @project.random_value %></td>
                    <td><%= @project.random_value %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
